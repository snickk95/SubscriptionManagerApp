<p id="errorMsg" class="mt-3"></p>
<p id="subsItemsMsg" class="mt-3"</p>

<div class="row">
    <div class="col-md-3">
        <form>
            <div class="form-group">
                <label for="userId">Find user's subscriptions by ID:</label>
                <input type="number" id="userId" name="userId" class="form-control" />
            </div>
            <button id="userSearchBtn" type="button" class="btn btn-primary">Search</button>
        </form>
    </div>

    <div class="col-md-6">
        <h4>Subscriptions:</h4>
        <ul id="subsList"></ul>

        <p id="monthlySpending" class="mt-3"></p>
    </div>

    <div class="col-md-3">
        <div>
            <label>Add a subscription:</label>
            <form>
                <select id="subSelect" class="form-select"></select>

                <button id="addSubBtn" type="button" class="btn btn-primary">Add Subscription</button>
            </form>
            <p id="newSubMsg" class="mt-3"></p>
        </div>
    </div>

</div>